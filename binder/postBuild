#!/bin/bash

curl https://sh.rustup.rs -sSf | sh -s -- --default-toolchain=nightly-2020-07-27 -y

echo '. $HOME/.cargo/env' >> ~/.bashrc
echo '. $HOME/.cargo/env' >> ~/.profile
source $HOME/.cargo/env

cargo install evcxr_jupyter evcxr_repl
# This should bring in arrow and a bunch of other things
time echo ':dep polars = "0.2"' | evcxr
evcxr_jupyter --install
